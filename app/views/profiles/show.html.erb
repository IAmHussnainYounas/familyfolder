<div class="max-w-lg mx-auto bg-white shadow-md rounded-lg p-6 mt-10">
  <h1 class="text-2xl font-bold mb-4">User Profile</h1>

  <div class="mb-4">
    <p class="text-lg"><strong>Name:</strong> <%= @user.name %></p>
  </div>

  <div class="mb-4">
    <p class="text-lg"><strong>Email:</strong> <%= @user.email %></p>
  </div>

  <div class="mt-6">
    <%= link_to 'Edit Profile', edit_profile_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-200" %>
  </div>
</div>
