<div class="w-full flex flex-col items-center mb-1">
  <h1 class="text-2xl font-bold mb-4 text-center">Tasks for <%= @project.name %></h1>
</div>

<div class="flex justify-center space-x-4 mb-4">
  <%= link_to 'New Task', new_project_task_path(@project), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-200" %>
  <%= link_to 'Back to Project', project_path(@project), class: "bg-gray-500 text-white py-2 px-4 rounded transition duration-200 hover:bg-gray-600" %>
</div>

<ul class="space-y-4">
  <% @tasks.each do |task| %>
    <li class="flex justify-between items-center p-4 bg-white shadow-md rounded-lg">
      <div class="flex-1">
        <p class="font-bold truncate">
          <%= link_to truncate(task.name, length: 30), project_task_path(@project, task), class: "text-blue-500 hover:text-blue-700" %>
        </p>
        <p class="text-gray-600 truncate">
          <%= truncate(task.description, length: 40) %>
        </p>
      </div>
      <div class="space-x-2">
        <%= link_to 'Edit', edit_project_task_path(@project, task), class: "text-blue-500 hover:text-blue-700" %>
        <%= link_to 'Delete', project_task_path(@project, task), data: { "turbo-method": :delete }, class: "text-red-500 hover:text-red-700" %>
      </div>
    </li>
  <% end %>
</ul>
