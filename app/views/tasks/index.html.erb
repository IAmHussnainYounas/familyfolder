<div class="w-full flex flex-col items-center mb-1"> <!-- Centered heading -->
  <h1 class="text-2xl font-bold mb-4 text-center">Tasks for <%= @project.name %></h1> <!-- Centered title -->
</div>

<div class="w-full flex justify-center mb-2">
  <%= link_to 'New Task', new_project_task_path(@project), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-200" %>
</div>

<ul class="mt-4 space-y-2"> <!-- Added spacing between list items -->
  <% @tasks.each do |task| %>
    <li class="flex items-center justify-between bg-white shadow-md rounded p-4"> <!-- Card-like appearance for each task -->
      <div>
        <%= task.name %> <!-- Task link with hover effect -->
      </div>
      <div class="flex space-x-2"> <!-- Flex container for action links -->
        <%= link_to 'Edit', edit_project_task_path(@project, task), class: "text-blue-500 hover:text-blue-700" %>
        <%= link_to 'Delete', project_task_path(@project, task), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-500 hover:text-red-700" %>
      </div>
    </li>
  <% end %>
</ul>
