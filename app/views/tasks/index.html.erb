<div class="w-full flex flex-col items-center mb-1">
  <h1 class="text-2xl font-bold mb-4 text-center">Tasks for <%= @project.name %></h1>
</div>

<div class="flex justify-center space-x-4 mb-4">
  <%= link_to 'Back to Project', project_path(@project), class: "bg-gray-500 text-white py-2 px-4 rounded transition duration-200 hover:bg-gray-600" %>
</div>
<%= turbo_frame_tag id='task_form', src:new_project_task_path(@project) %>

<ul class="space-y-4 mb-4" id="tasks">
  <% @tasks.each do |task| %>
  <%= render 'task', task: task %>
  <% end %>
</ul>
