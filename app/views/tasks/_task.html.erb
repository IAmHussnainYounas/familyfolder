<li class="flex items-center justify-between p-4 bg-white shadow-md rounded-lg">
  <div class="w-1/4">
    <p class="font-bold text-blue-500 hover:text-blue-700">
      <%= link_to truncate(task.name, length: 30), project_task_path(@project, task) %>
    </p>
  </div>

  <div class="w-1/2">
    <p class="text-gray-600">
      <%= truncate(task.description, length: 50) %>
    </p>
  </div>
  <div class="w-1/6 text-center">
    <span class="px-3 py-1 text-xs font-semibold rounded-full
      <%= case task.status
            when 'pending'
              'bg-yellow-200 text-yellow-800'
            when 'in_progress'
              'bg-blue-200 text-blue-800'
            when 'completed'
              'bg-green-200 text-green-800'
          end %>">
      <%= task.status.humanize %>
    </span>
  </div>

  <div class="w-1/6 text-right space-x-4">
    <%= link_to 'Edit', edit_project_task_path(@project, task), class: "text-blue-500 hover:text-blue-700" %>
    <%= link_to 'Delete', project_task_path(@project, task), data: { "turbo-method": :delete }, class: "text-red-500 hover:text-red-700" %>
  </div>
</li>
