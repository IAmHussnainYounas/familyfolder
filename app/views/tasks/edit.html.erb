<h1 class="text-2xl font-bold mb-6 text-center">Edit Task for <%= @project.name %></h1>
<div class="flex justify-center space-x-4 mb-4">
  <%= link_to 'Back to Tasks', project_tasks_path(@project), class: "bg-gray-500 text-white py-2 px-4 rounded transition duration-200 hover:bg-gray-600" %>
</div>

<%= turbo_frame_tag id='task_form' do %>
  <%= render 'form', task: @task, project: @project %>
<% end %>
