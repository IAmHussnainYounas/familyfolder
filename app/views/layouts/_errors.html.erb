<% flash.each do |type, message| %>
  <% flash_class = case type %>
    <% when "notice" then "bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded" %>
    <% when "alert" then "bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded" %>
  <% end %>
  <div class="<%= flash_class %>">
    <p><%= message %></p>
  </div>
<% end %>
