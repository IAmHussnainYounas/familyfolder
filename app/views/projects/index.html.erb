<h1 class="text-2xl font-bold mb-6 text-center">Projects</h1>

<div class="mb-4 text-center">
  <%= link_to 'New Project', new_project_path, class: "bg-blue-500 text-white py-2 px-4 rounded transition duration-200 hover:bg-blue-600" %>
</div>

<ul class="space-y-4">
  <% @projects.each do |project| %>
    <li class="flex justify-between items-center p-4 bg-white shadow-md rounded-lg">
      <div>
        <%= link_to project.name, project_path(project), class: "text-lg font-semibold text-blue-700 hover:underline" %>
      </div>
      <div class="space-x-2">
        <%= link_to 'Edit', edit_project_path(project), class: "text-blue-500 hover:text-blue-700" %>
        <%= link_to 'Delete', project_path(project), data: { "turbo-method": :delete }, class: "text-red-500 hover:text-red-700" %>
      </div>
    </li>
  <% end %>
</ul>
