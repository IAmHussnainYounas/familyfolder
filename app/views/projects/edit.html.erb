<h1 class="text-2xl font-bold mb-4 text-center">Edit Project</h1> <!-- Centered title -->

<%= form_with model: @project, local: true, class: "max-w-md mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" do |f| %>
  <div class="mb-4"> <!-- Added margin bottom for spacing -->
    <%= f.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %> <!-- Added styling for label -->
    <%= f.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %> <!-- Maintained existing styles -->
  </div>

  <div class="mb-4"> <!-- Added margin bottom for spacing -->
    <%= f.label :description, class: "block text-gray-700 text-sm font-bold mb-2" %> <!-- Added styling for label -->
    <%= f.text_area :description, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %> <!-- Maintained existing styles -->
  </div>

  <div class="flex items-center justify-between"> <!-- Added flex for alignment -->
    <%= f.submit "Update Project", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-200 focus:outline-none focus:shadow-outline" %> <!-- Added hover and transition effects -->
  </div>
<% end %>

<%= link_to 'Back', projects_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded transition duration-200" %> <!-- Added hover effect -->
