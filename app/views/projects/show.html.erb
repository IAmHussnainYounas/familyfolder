<div class="max-w-md mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
  <h1 class="text-3xl font-bold text-center mb-4"><%= @project.name %></h1>
  <p class="text-gray-700 text-base mb-6"><%= @project.description %></p>

  <div class="flex justify-between mb-4">
    <%= link_to 'Edit', edit_project_path(@project), class: "bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded transition duration-200" %>
    <%= link_to 'Back', projects_path, class: "bg-gray-500 hover:bg-gray-700 text-white py-2 px-4 rounded transition duration-200" %>
    <%= link_to 'View Tasks', project_tasks_path(@project), class: "bg-green-500 hover:bg-green-700 text-white py-2 px-4 rounded transition duration-200" %>
    <%= link_to 'View Faqs', project_faqs_path(@project), class: "bg-green-500 hover:bg-green-700 text-white py-2 px-4 rounded transition duration-200" %>
  </div>

  <!-- Button to invite user -->
  <div class="flex justify-center mb-4">
    <% if current_user == @project.user %>
      <button id="invite-button" class="bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded transition duration-200">
        Invite User
      </button>
    <% end %>
  </div>

  <!-- Hidden Email Input Field -->
  <div id="email-input" class="hidden mb-4">
    <%= form_with url: invite_project_path(@project), method: :post, local: true do |f| %>
      <div class="max-w-md mx-auto mb-4">
        <%= f.label :email, "Invite User by Email", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.email_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="max-w-md mx-auto">
        <%= f.submit "Send Invite", class: "bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded transition duration-200" %>
      </div>
    <% end %>
  </div>
</div>

