<h1 class="text-3xl font-bold mb-4 text-center">Edit FAQ</h1>
<div class="flex justify-center space-x-4 mb-4">
  <%= link_to 'Back to FAQs', project_faqs_path(@project), class: "bg-gray-500 text-white py-2 px-4 rounded transition duration-200 hover:bg-gray-600" %>
</div>

<div class="max-w-md mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
  <%= turbo_frame_tag id='faq_form' do %>
    <%= render 'form', faq: @faq, project: @project%>
  <% end %>
</div>
