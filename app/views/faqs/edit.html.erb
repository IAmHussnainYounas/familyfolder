<h1 class="text-3xl font-bold mb-4 text-center">Edit FAQ</h1>

<div class="max-w-md mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4"> <!-- Container for the form -->
  <%= form_with(model: [@project, @faq], local: true) do |f| %>
    <div class="mb-4">
      <%= f.label :question, "Question", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :question, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :answer, "Answer", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_area :answer, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex justify-between items-center mt-6"> <!-- Flex container for buttons -->
      <div class="flex-1"> <!-- Optional: Add some space before the buttons -->
        <%= f.submit "Update FAQ", class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded transition duration-200" %>
      </div>
      <div class="flex-1 text-right"> <!-- Right-align Back button -->
        <%= link_to 'Back to Project', project_path(@project), class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded transition duration-200" %>
      </div>
    </div>
  <% end %>
</div>
