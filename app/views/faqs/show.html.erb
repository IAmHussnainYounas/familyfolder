<h1 class="text-3xl font-bold text-center mb-4">FAQ Details</h1>

<div class="max-w-md mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
  <div class="mb-4">
    <h2 class="text-xl font-semibold text-gray-800 mb-2">Question:</h2>
    <p class="text-gray-700"><%= @faq.question %></p>
  </div>

  <div class="mb-4">
    <h2 class="text-xl font-semibold text-gray-800 mb-2">Answer:</h2>
    <p class="text-gray-700"><%= @faq.answer %></p>
  </div>

  <div class="flex justify-between items-center mt-6">
    <div class="flex space-x-4"> <!-- Flex container for buttons with space between -->
      <%= link_to 'Edit', edit_project_faq_path(@project, @faq), class: "bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded transition duration-200" %>
      <%= link_to 'Delete', project_faq_path(@project, @faq), data: { "turbo-method": :delete }, style: "background-color: red; color: white; padding: 8px; border-radius: 4px;"%>
    </div>

    <%= link_to 'Back to Project', project_path(@project), class: "bg-gray-500 hover:bg-gray-700 text-white py-2 px-4 rounded transition duration-200" %>
  </div>
</div>
