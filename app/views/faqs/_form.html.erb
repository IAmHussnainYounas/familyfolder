<%= turbo_frame_tag id='faq_form', target: '_top' do %>
  <%= form_with(model: [project, faq], local: true) do |f| %>
    <div class="max-w-md mx-auto mb-4">
      <%= f.label :question, "Question", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :question, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="max-w-md mx-auto mb-4">
      <%= f.label :answer, "Answer", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_area :answer, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="flex justify-center items-center mt-6 space-x-4">
      <%= f.submit "Create FAQ", class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
<% end %>