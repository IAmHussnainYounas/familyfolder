<h1 class="text-2xl font-bold mb-6 text-center">FAQs</h1>

<div class="flex justify-center space-x-4 mb-4">
  <%= link_to 'Add New FAQ', new_project_faq_path(@project), class: "bg-blue-500 text-white py-2 px-4 rounded transition duration-200 hover:bg-blue-600" %>
  <%= link_to 'Back to Project', project_path(@project), class: "bg-gray-500 text-white py-2 px-4 rounded transition duration-200 hover:bg-gray-600" %>
</div>

<ul class="space-y-4">
  <% @faqs.each do |faq| %>
    <li class="flex justify-between items-center p-4 bg-white shadow-md rounded-lg">
      <div class="flex-1">
        <p class="font-bold truncate">
          <%= link_to truncate(faq.question, length: 30), project_faq_path(@project, faq), class: "text-blue-500 hover:text-blue-700" %>
        </p>
        <p class="text-gray-600 truncate">
          <%= truncate(faq.answer, length: 40) %>
        </p>
      </div>
      <div class="space-x-2">
        <%= link_to 'Edit', edit_project_faq_path(@project, faq), class: "text-blue-500 hover:text-blue-700" %>
        <%= link_to 'Delete', project_faq_path(@project, faq), data: { "turbo-method": :delete }, class: "text-red-500 hover:text-red-700" %>
      </div>
    </li>
  <% end %>
</ul>
